<Window x:Class="ClassicListExporter.ListNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassicListExporter"
        mc:Ignorable="d"
        Title="Name your list" Height="177.937" Width="300">
    <Grid Margin="0,0,0,0">
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275"/>
        <Label Content="Enter a name for the list" HorizontalAlignment="Left" Margin="78,21,0,0" VerticalAlignment="Top"/>
        <Button Content="Export to geocaching.com" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="66,0,67,20" Width="162" Click="Button_Click"  />

    </Grid>
</Window>
